//
// top half of the page: canvases etc
//
body {
  font-family: Apex,"Helvetica Neue","HelveticaNeue","Lucida Grande", Helvetica, Arial, sans-serif;
  font-size: 100%;
  min-width: 950px; // also see layout.styl

  -webkit-transition: background-color 0.12s ease-out;
     -moz-transition: background-color 0.12s ease-out;
}
body > * {
  margin-left: 48px;
  margin-right: 48px;
}
h1 > a {
  text-decoration: none;
}
canvas {
  -moz-border-radius: 3px;
  border-radius: 3px;
  cursor: normal;
}
#current {
  float: left;
  font-size: .9em;
}
p + canvas {
  margin-bottom: 1.5em;
}
div > p:first-child {
  margin-top: 0em;
}

