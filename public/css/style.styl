@import normalize
@import "../aristo/css/aristo.css"
@import layout

body.white {
  color: #222;
  background: #fff;

  h1 > a {
    color: #222;
  }
  // background color
  body, canvas {
    background: #fff;
  }
  // borders using the foreground color
  canvas {
    border: 2px solid #222;
  }
}
.color.black {
  color: black;
}
.color.black:hover {
  box-shadow: inset 0 0 0 2px rgba(0, 0, 0, 0.5);
}

.color.white {
  color: white;
}
.color.white:hover {
  box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.5);
}

body.black {
  color: #fff;
  background: #000;

  h1 > a {
    color: #fff;
  }
  /* background color */
  body, canvas {
    background: #000;
  }
  /* borders using the foreground color*/
  canvas {
    border: 2px solid #fff;
  }
}

body {
  margin: 0;
  padding: 0;
  font-family: Apex,"Helvetica Neue","HelveticaNeue","Lucida Grande", Helvetica, Arial, sans-serif;
  font-size: 100%;

  -webkit-transition: background-color 0.12s ease-out;
     -moz-transition: background-color 0.12s ease-out;
}
body > * {
  margin-left: 48px;
  margin-right: 48px;
}
h1 > a {
  text-decoration: none;
}
canvas {
  -moz-border-radius: 3px;
  border-radius: 3px;
  cursor: normal;
}
#colors {
  margin-left: 0em;
  margin-right: 0em;
  font-size: .9em;
}
#colors > .color {
  /* border: 1px solid #999; */
  margin: 1.5em 0em;
  padding: .75em;
  padding-left: 48px;
}
#colors > .color:hover {
  /* border: 1px solid white; */
}
code, #colors {
  font-family: monaco, Andale Mono, "Courier New", monospace;
}
#colors > p > img {
  display: inline;
  padding: 2px;
}
.col3, .col2 {
  width: 100%;
  display: block;
  overflow: hidden;
}
.col2 {
  width: 1024px;
}
.col3 > div {
  display: inline-block;
  width: 20%;
}
.col3 > div + div + div {
  width: 35%;
  display: inline-table;
  vertical-align: top;
}
.col2 > div {
  display: inline-block;
}
.col2 > div + div {
  display: inline-table;
  vertical-align: top;
  margin-left: 3em;
}
#current {
  float: left;
}
p + canvas {
  margin-bottom: 1.5em;
}
div > p:first-child {
  margin-top: 0em;
}

.U {
  font-size: 1.5em;
}
.delete:hover, .clone:hover {
  cursor: pointer;
}

h3, h3 + p {
  // display: inline;
}
h3 + p {
  margin-left: 1.5em
  label {
    margin-left: .75em
    font-size: 1em;
  }
}