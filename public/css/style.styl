//
// top half of the page: canvases etc
//
body {
  font-family: Apex,"Helvetica Neue","HelveticaNeue","Lucida Grande", Helvetica, Arial, sans-serif;
  font-size: 100%;
  min-width: 950px; // also see layout.styl

  -webkit-transition: background-color 0.12s ease-out;
     -moz-transition: background-color 0.12s ease-out;
}
body > * {
  margin-left: 48px;
  margin-right: 48px;
}
h1 > a {
  text-decoration: none;
}
canvas {
  -moz-border-radius: 3px;
  border-radius: 3px;
  cursor: normal;
}
#current {
  float: left;
  font-size: .9em;
}
p + canvas {
  margin-bottom: 1.5em;
}
div > p:first-child {
  margin-top: 0em;
}

h3 + p {
  margin-left: 1.5em
  label {
    margin-left: .75em
    font-size: 1em;
  }
}

//
// headings for the two-column layout that holds the slicerack widget and
// the right panel (search and replace, also color palette)
//
.col2 {
  width: 100%;
  display: block;
  // overflow: hidden;
  margin-left: 0em;
  margin-right: 0em;

  > div {
    display: inline-block;
    // width: 24%;
    width: 310px;
    border-right: 2px solid black;
    padding-right: 24px;
  }

  > div + div {
    display: inline-table;
    vertical-align: top;
    width: 60%;
    border: none;
    padding: 0;
  }
}
.headings {
  margin-top: .75em;
  margin-bottom: .75em;

  > h3 {
    display: inline;
    width: 310px; // mirrors first col2 div
  }
  > h3 + h3 {
    margin-left: 24px;
    width: 60%;
  }
}


//
// sliceRack widget
//
#colors {
  margin-left: 0em;
  margin-right: 0em;
  font-size: .9em;
}
#colors > .color {
  padding: .75em;
  padding-left: 48px;
}

// adapt the text to the background of the swatch
.color.black {
  color: black;
}
.color.black:hover {
  box-shadow: inset 0 0 0 2px rgba(0, 0, 0, 0.5);
}
.color.black .c {
  border-bottom: 2px solid rgba(0, 0, 0, 0);
}
.color.black .c:hover {
  border-bottom: 2px solid rgba(0, 0, 0, 0.5);
}
.color.white {
  color: white;
}
.color.white:hover {
  box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.5);
}
.color.white .c {
  border-bottom: 2px solid rgba(255, 255, 255, 0);
}
.color.white .c:hover {
  border-bottom: 2px solid rgba(255, 255, 255, 0.5);
}

.color + .color {
  margin-top: 1.5em;
}
code, #colors {
  font-family: monaco, Andale Mono, "Courier New", monospace;
