//
// headings for the two-column layout that holds the slicerack widget and
// the right panel (search and replace, also color palette)
//
.col2 {
  width: 100%;
  display: block;
  // overflow: hidden;
  margin-left: 0em;
  margin-right: 0em;

  > div:first-child {
    display: inline-block;
    // width: 24%;
    width: 310px;
    padding-right: 24px;
  }

  > div + div {
    display: inline-table;
    vertical-align: top;
    width: 60%;
    border-left: 2px solid black;
    padding-left: 22px;
  }
}
.headings {
  margin-top: .75em;
  margin-bottom: .75em;
  text-align: left;
  th {
    margin-left: 0;
    padding-left: 0;
    font-size: 1.2em;
    width: 310px;
  }
  th + th {
    width: 60%
  }
}


//
// sliceRack widget
//
#colors {
  margin-left: 0em;
  margin-right: 0em;
  font-size: .9em;
}
#colors > .color {
  padding: .75em;
  padding-left: 48px;
}

// hides and collapses dividers at the top, and that happen in a row
#colors > hr:first-child {
  display: none;
}
#colors > hr + hr {
  display: none;
}
#colors > hr {
  border: none;
  border-bottom: 1px solid rgba(0,0,0,.75);
  background-color: rgba(0,0,0,.75);
}

// adapt the text to the background of the swatch
.color.black {
  color: black;
}
.color.black:hover {
  box-shadow: inset 0 0 0 2px rgba(0, 0, 0, 0.5);
}
.color.black .c {
  border-bottom: 2px solid rgba(0, 0, 0, 0);
}
.color.black .c:hover {
  border-bottom: 2px solid rgba(0, 0, 0, 0.5);
}
.color.white {
  color: white;
}
.color.white:hover {
  box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.5);
}
.color.white .c {
  border-bottom: 2px solid rgba(255, 255, 255, 0);
}
.color.white .c:hover {
  border-bottom: 2px solid rgba(255, 255, 255, 0.5);
}

.color + .color {
  margin-top: 1.5em;
}
code, #colors {
  font-family: monaco, Andale Mono, "Courier New", monospace;
}

#recolors {
  input[type="text"] {
    width: 3em;
    background-color: rgba(0,0,0,0);
    box-shadow: inset 0px 1px 2px rgba(0,0,0,.3);
    border: 1px solid rgba(0,0,0,.3);

    &.range {
      width: 2em;
    }
  }
}
li {
  margin-top: .75em
}

#schemer input {
  width: 2em;
}

//
// icons for recolor and slicerack widgets
//
.U {
  font-size: 1.4em;
  -moz-user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
}

.delete:hover, .clone:hover {
  cursor: pointer;
}
